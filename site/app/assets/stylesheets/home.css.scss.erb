@mixin v_rotate3d($x, $y, $z, $t) {
	-webkit-transform: rotate3d($x, $y, $z, $t);
	-moz-transform: rotate3d($x, $y, $z, $t);
	-o-transform: rotate3d($x, $y, $z, $t);
	transform: rotate3d($x, $y, $z, $t);
}

@mixin v_rotate($t) {
	-webkit-transform: rotate($t);
	-moz-transform: rotate($t);
	-o-transform: rotate($t);
	transform: rotate($t);
}

@mixin v_transform-origin($x, $y) {
	-webkit-transform-origin: $x $y;
	-moz-transform-origin: $x $y;
	-ms-transform-origin: $x $y;
	-o-transform-origin: $x $y;
	transform-origin: $x $y;
}

@mixin v_transition($fields, $duration, $timing) {
	-webkit-transition: $fields $duration $timing;
	-moz-transition: $fields $duration $timing;
	-o-transition: $fields $duration $timing;
	transition: $fields $duration $timing;
}

@mixin v_animation($animation, $duration) {
	-webkit-animation: $animation $duration;
	-moz-animation: $animation $duration;
	-o-animation: $animation $duration;
	animation: $animation $duration;
}

